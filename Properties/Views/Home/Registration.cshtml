@model PoultryFormManagementSystem.Models.TblRegister
@{
    ViewBag.Title = "Registration";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

<center>
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />


    @using (Html.BeginForm("Registration", "Home", FormMethod.Post))
    {
        <table style="width: 448px; height: 440px; background-color: #FF9933; font-size: large; font-weight: bold;">
            <th colspan="2" align="center"><h1>Register Now</h1></th>


            <tr>
                <td align="center">Name</td>
                <td align="center">
                    <a>@Html.TextBoxFor(m => m.cName)</a>
                </td>
            </tr>

            <tr>
                <td align="center">username</td>
                <td align="center">
                    <a>@Html.TextBoxFor(m => m.userName)</a>
                </td>
            </tr>



            <tr>
                <td align="center">Phone</td>
                <td align="center">
                    @Html.TextBoxFor(m => m.phoneNo)
                </td>
            </tr>

            <tr>
                <td align="center">Password</td>
                <td align="center">
                    @Html.TextBoxFor(m => m.password)
                </td>
            </tr>

            <tr>
                <td align="center">Confirm Password</td>
                <td align="center">
                    @Html.TextBoxFor(m => m.password)
                </td>
            </tr>
            <tr>
                <td align="center">City Name</td>
                <td align="center">
                    @Html.TextBoxFor(m => m.city)
                </td>
            </tr>

            <tr>
                <td colspan="2" align="center">
                    <input type="submit" value="Submit" name="submit" class="btn btnOrder" />
                </td>
            </tr>
        </table>
    }


    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
</center>

